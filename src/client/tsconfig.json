{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "baseUrl": ".",
        "paths": {
            "shared/*": ["../shared/*"]
        }
    },
    "exclude": [
        "typings"
    ],
    "types": [
        "core-js"
    ]
}